#:import Window kivy.core.window.Window
<DialogGithub>
    auto_dismiss: False
    title: root.title_git
    separator_color: (192/256,110/256,240/256,1)
    size_hint:None,None
    size:Window.width - 20, '420dp'
    MDBoxLayout:
        md_bg_color: app.theme_cls.bg_darkest
        orientation: "vertical"
        MDRelativeLayout:
            id:box
            MDLabel:
                text:root.text
                halign:'center'
                pos_hint:{'center_x':.5, 'center_y':.8}
            MDFillRoundFlatButton:
                text: root.text_btn
                on_press: root.dismiss()
                text_color: 0, 0, 0, 1
                line_color: 1, 0, 1, 1
                pos_hint: {"center_x": .8,"center_y":.1}
            MDTextField:
                id:id_link
                mode:'rectangle'
                hint_text:root.link_input
                pos_hint:{"center_x": .5, "center_y": .5}
                size_hint_x:.9
            MDRectangleFlatButton:
                id:btn_add_link
                text: root.btn_link
                text_color: 0, 0, 0, 1
                line_color: 1, 0, 1, 1
                pos_hint: {"center_x": .5,"center_y":.3}




